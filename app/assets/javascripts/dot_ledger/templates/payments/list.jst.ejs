<div class="page-header">
  <div class="pull-right">
    <a href="/payments/new" class="btn btn-default">
      <span class="fa fa-plus"></span>
    </a>
  </div>

  <h1>Payments</h1>
</div>

<% _.each(paymentDates(), function(date) { %>
  <h4><%= moment(date).format('LL') %></h4>

  <table class="table table-bordered payments" id="payment-date-<%= moment(date).format('X') %>">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th class="amount">Spend</th>
        <th class="amount">Receive</th>
        <th class="edit"></th>
      </tr>
    </thead>

    <tbody>
    </tbody>
  </table>
<% }) %>
